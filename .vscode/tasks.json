    "version": "2.0.0",
    "echoCommand": true,
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "tsc",
            "options": {
				"shell": {
					"executable": "C:\\Windows\\System32\\bash.exe",
					"args": ["--login", "-c"]
				}
			},
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}